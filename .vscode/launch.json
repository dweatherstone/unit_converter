    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Unit Converter",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/unitconvert",
            "args": ["--from", "km", "--to", "lb", "10"],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "sourceLanguages": ["rust"]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'unitconvert'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=unitconvert"
                ],
                "filter": {
                    "name": "unitconvert",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'unitconvert'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=unitconvert",
                    "--package=unitconvert"
                ],
                "filter": {
                    "name": "unitconvert",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'unitconvert'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=unitconvert",
                    "--package=unitconvert"
                ],
                "filter": {
                    "name": "unitconvert",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'cli'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=cli",
                    "--package=unitconvert"
                ],
                "filter": {
                    "name": "cli",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'common'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=common",
                    "--package=unitconvert"
                ],
                "filter": {
                    "name": "common",
                    "kind": "test"
                }
            },
